<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".reg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="SIGN UP"
                android:textColor="#3F3F3F"
                android:textSize="50sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#F4D786"
                app:cardCornerRadius="250dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:elevation="12dp"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:id="@+id/imgv"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dpic" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etun"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etpw"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etcpw"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etfn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etln"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Mail Address"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etea"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact No."
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etcn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etadd"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textSize="30sp"/>

            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:id="@+id/bday"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:textColor="@color/black"
                android:hint="Birthday"
                android:textColorHint="@color/gray"
                android:padding="10dp"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/spnr1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="30sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer to Question No. 1"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ans1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/spnr2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="30sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer to Question No. 2"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ans2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </com.google.android.material.textfield.TextInputLayout>



            <Spinner
                android:id="@+id/spnr3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:textColor="@color/black"
                android:padding="15dp"
                android:textSize="30sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer to Question No. 3"
                android:textColorHint="@color/gray">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ans3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

            </com.google.android.material.textfield.TextInputLayout>




            <RadioGroup
                android:id="@+id/rbgrp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textColor="#3F3F3F"
                    android:textStyle="bold"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E6E6E6"
                android:textColor="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#E6E6E6"
                    android:textColor="#3F3F3F"
                    android:textStyle="bold"
                    android:text="Please select a Hobby:"
                    android:textSize="30sp" />

                <CheckBox
                    android:id="@+id/hb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dancing"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Singing"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleeping"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Partying"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eating"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playing"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shopping"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Travelling"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joking"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />

                <CheckBox
                    android:id="@+id/hb10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Praying"
                    android:textColor="#3F3F3F"
                    android:textSize="29sp" />


            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/logr"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/lin"
                android:backgroundTint="#B1C4A8"
                android:padding="10dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/reg"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btnbrdr"
                android:backgroundTint="@color/blue"
                android:padding="10dp"
                android:text="Register"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>